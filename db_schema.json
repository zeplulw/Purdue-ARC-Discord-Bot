{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "emailVerification": {
      "type": "object",
      "patternProperties": {
        "^[0-9]{17,18}$": {
          "type": "object",
          "properties": {
            "email": {
              "type": "string",
              "pattern": "^[a-z0-9]+@purdue\\.edu$"
            },
            "verified": {
              "type": "boolean"
            },
            "verificationCode": {
              "type": "integer",
              "minimum": 100000,
              "maximum": 999999
            }
          },
          "required": [
            "email",
            "verified",
            "verificationCode"
          ],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "emailVerification" 
  ],
  "additionalProperties": false
}